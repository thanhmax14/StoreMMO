<body>
    <main id="main" class="main">

        <div class="pagetitle">
            <h1>View Store Details</h1>
        </div><!-- End Page Title -->

        <section class="section">
            <div class="row">
                <div class="col-lg-12">

                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Store Details Table</h5>
                            @if (!string.IsNullOrEmpty(Model.success))
                            {
                                <div class="alert alert-success alert-dismissible fade show" role="alert">
                                    <i class="bi bi-check-circle me-1"></i>
                                    @Model.success
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(Model.fail))
                            {
                                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                    <i class="bi bi-exclamation-octagon me-1"></i>
                                    @Model.fail
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            }

                            <!-- Form -->
                            <form method="post" enctype="multipart/form-data">
                                <!-- Name -->
                                <div class="row mb-4">
                                    <label class="col-sm-5 col-form-label">Name</label>
                                    <div class="col-sm-15">
                                        <input type="text" class="form-control" asp-for="input.Name" disabled />
                                    </div>
                                    <span style="color:red" asp-validation-for="input.Name"></span>
                                </div>

                                <!-- SubDescription -->
                                <div class="row mb-4">
                                    <label class="col-sm-5 col-form-label">Sub Description</label>
                                    <div class="col-sm-15">
                                        <input type="text" class="form-control" asp-for="input.SubDescription" disabled />
                                    </div>
                                    <span style="color:red" asp-validation-for="input.SubDescription"></span>
                                </div>

                                <!-- Description Detail -->
                                <div class="row mb-4">
                                    <label class="col-sm-5 col-form-label">Description Detail</label>
                                    <div class="col-sm-15">
                                        <input type="text" class="form-control" asp-for="input.DescriptionDetail" disabled/>
                                    </div>
                                    <span style="color:red" asp-validation-for="input.DescriptionDetail"></span>
                                </div>

                                <!-- Category -->
                                <div class="row mb-4">
                                    <label class="col-sm-5 col-form-label">Category</label>
                                    <div class="col-sm-15">
                                        <select asp-for="input.CategoryId" asp-items="Model.input.CategoryOptions" class="form-control" disabled >
                                            <option value="">Select Category</option>
                                        </select>
                                    </div>
                                    <span style="color:red" asp-validation-for="input.CategoryId"></span>
                                </div>

                                <!-- Store Type -->
                                <div class="row mb-4">
                                    <label class="col-sm-5 col-form-label">Store Type</label>
                                    <div class="col-sm-15">
                                        <select asp-for="input.StoreTypeId" asp-items="Model.input.StoreTypeOptions" class="form-control" disabled >
                                            <option value="">Select Store Type</option>
                                        </select>
                                    </div>
                                    <span style="color:red" asp-validation-for="input.StoreTypeId"></span>
                                </div>

                                <!-- Current Image -->
                                <div class="row mb-4">
                                    <label class="col-sm-5 col-form-label">Current Image</label>
                                    <div class="col-sm-15">
                                        @if (!string.IsNullOrEmpty(Model.input.Img))
                                        {
                                            <img src="@Model.input.Img" alt="Store Image" width="100" />
                                        }
                                        else
                                        {
                                            <p>No image uploaded.</p>
                                        }
                                    </div>
                                </div>

                                <!-- Image Upload -->
                                @* <div class="row mb-4">
                                    <label class="col-sm-5 col-form-label">Upload New Image</label>
                                    <div class="col-sm-15">
                                        <input type="file" class="form-control" asp-for="input.InputImage" />
                                    </div>
                                </div> *@

                                <input type="hidden" asp-for="input.Id" />

                                @* <button type="submit" class="btn btn-primary">Update</button> *@
                                <button type="button" onclick="window.location.href='/seller/index'" class="btn btn-secondary">Back To List</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

