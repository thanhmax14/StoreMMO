                <div class="col-lg-12">

                    <div class="card">
                        <div class="card-body">
                            @if (!string.IsNullOrEmpty(@Model.successreportad))
                            {
                                <div class="alert alert-success alert-dismissible fade show" role="alert">
                                    <i class="bi bi-check-circle me-1"></i>
                                    @Model.successreportad
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(@Model.failreportad))
                            {
                                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                    <i class="bi bi-exclamation-octagon me-1"></i>
                                    @Model.failreportad
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            }
                            <!-- Table with stripped rows -->
                            <table class="table datatable">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <td>Seller</td>
                                        <td>Customer</td>
                                        <th>Mô Tả</th>
                                        <th>Giá</th>
                                        <th>OrderCode</th>
                                        <th>ProductName</th>
                                        <th></th>
                                        <th></th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int stt = 1;
                                    }
                                    @foreach (var item in Model.listcomplaints)
                                    {
                                        <tr>
                                            <td>@stt</td>
                                            <td>@(item.OrderDetailmap?.orderBuymap?.StoreMap?.Usermapper?.FullName ?? "khong tim thay")</td>
                                            <td>@(item.OrderDetailmap?.orderBuymap?.UserMap?.FullName ?? "notfound")</td>
                                            <td>@item.Description</td>
                                            <td>@(item.OrderDetailmap.Price ?? "Chưa xác định")</td>
                                            <td>@(item.OrderDetailmap?.orderBuymap?.OrderCode ?? "Chưa xác định")</td>
                                            <td>@(item.OrderDetailmap?.productMapper?.ProductTypemap?.Name ?? "Chưa xác định")</td>
                                            <td>
                                                <form method="post" asp-page-handler="ReportAdmin" class="confirmation-form">
                                                    <input type="hidden" name="id" value="@item.ID" />
                                                    <button type="button" class="btn btn-primary confirm-btn"
                                                            data-action="ReportAdmin"
                                                            data-id="@item.ID"
                                                            data-title="Report Admin Confirmation"
                                                            data-message="Are you sure you want to report this admin?">
                                                        ReportAdmin
                                                    </button>
                                                </form>
                                            </td>
                                            <td>
                                                @{
                                                    decimal price;
                                                    decimal currentBalance;

                                                    decimal.TryParse(item.OrderDetailmap.Price, out price);
                                                    decimal.TryParse(item.OrderDetailmap?.orderBuymap?.StoreMap?.Usermapper?.CurrentBalance.ToString(), out currentBalance);
                                                    bool hasEnoughBalance = price <= currentBalance;
                                                }
                                            <td>
                                                <form method="post" asp-page-handler="BackMoney" class="confirmation-form" id="backMoneyForm">
                                                    <input type="hidden" name="idseller" value="@item.OrderDetailmap?.orderBuymap?.StoreMap?.Usermapper?.Id" />
                                                    <input type="hidden" name="id" value="@item.ID" />
                                                    <input type="hidden" name="iduser" value="@item.OrderDetailmap?.orderBuymap?.UserMap?.Id" />
                                                    <input type="hidden" name="price" value="@item.OrderDetailmap.Price" />
                                                    <input type="hidden" name="idorderdetail" value="@item.OrderDetailmap?.ID" />
                                                    <input type="hidden" name="ordercode" value="@item.OrderDetailmap?.orderBuymap?.OrderCode" />

                                                        @if (hasEnoughBalance)
                                                        {
                                                        <button type="button" class="btn btn-primary confirm-btn"
                                                               
                                                                data-message="Are you sure you want to return the money for the customer? Money will be reduced.">
                                                            BackMoney
                                                        </button>
                                                        }
                                                        else
                                                        {
                                                        <button type="button" class="btn btn-secondary"
                                                                onclick="alert('You don\'t have enough money to return to the customer.')">
                                                            BackMoney
                                                        </button>
                                                        }
                                                </form>

                                                <script>
                                                    function confirmAndSubmitForm(formId) {
                                                        const message = "Are you sure you want to return the money for the customer? Money will be reduced.";
                                                        if (confirm(message)) {
                                                            document.getElementById(formId).submit();
                                                        }
                                                    }
                                                </script>

                                            </td>
                                            </td>
                                            <td>
                                                <form method="post" asp-page-handler="warrant" class="confirmation-form" id="warrantForm">
                                                    <input type="hidden" name="id" value="@item.ID" />
                                                    <input type="hidden" name="idseller" value="@item.OrderDetailmap?.orderBuymap?.StoreMap?.Usermapper?.Id" />
                                                    <input type="hidden" name="idstore" value="@item.OrderDetailmap?.orderBuymap?.StoreMap?.Id" />
                                                    <input type="hidden" name="iduser" value="@item.OrderDetailmap?.orderBuymap?.UserMap?.Id" />
                                                    <input type="hidden" name="idproducttype" value="@item.OrderDetailmap?.productMapper?.ProductTypemap?.Id" />
                                                    <input type="hidden" name="idproduct" value="@item.OrderDetailmap?.productMapper?.Id" />
                                                    <button type="button" class="btn btn-primary confirm-btn"
                                                            onclick="confirmAndSubmitForm('warrantForm')"
                                                            data-message="Are you sure you want to warrant this item? You will send another item back for customer.">
                                                        Warrant
                                                    </button>
                                                </form>

                                                <script>
                                                    function confirmAndSubmitForm(formId) {
                                                        const message = "Are you sure you want to warrant this item? You will send another item back for customer.";
                                                        if (confirm(message)) {
                                                            document.getElementById(formId).submit();
                                                        }
                                                    }
                                                </script>

                                               

                                            </td>
                                        </tr>
                                        stt++;
                                    }
                                </tbody>
                            </table>
                            <!-- End Table with stripped rows -->

