@page
@model StoreMMO.Web.Pages.Seller.Complain.ComplainListModel
@{
}
<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Danh sách Khiếu Nại</h5>
                    <button type="button" onclick="window.location.href='/admin/CreateCategory'" class="btn btn-secondary">Tạo Mới</button>

                    <!-- Table with stripped rows -->
                    <table class="table datatable">
                        <thead>
                            <tr>
                                <th></th> 
                                <td>Seller</td>
                                <td>Customer</td>
                                <th>Mô Tả</th>
                                                     
                                <th>Giá</th> <!-- Thêm cột cho Price -->
                                <th>OrderCode</th>                            
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int stt = 1;
                            }
                            @foreach (var item in Model.listcomplaints)
                            {
                                <tr>
                                    <td>@stt</td>
                                    <td>@(item.OrderDetailmap?.orderBuymap?.StoreMap?.Usermapper?.FullName ?? "khong tim thay")</td>
                                    <td>@(item.OrderDetailmap?.orderBuymap?.UserMap?.FullName ?? "notfound")</td>
                                    <td>@item.Description</td>     
                                    
                                    <td>@(item.OrderDetailmap.Price ?? "Chưa xác định")</td>
                                    <td>@(item.OrderDetailmap?.orderBuymap?.OrderCode ?? "Chưa xác định")</td>                                 
                                    <td>
                                        <form method="post" asp-page-handler="ReportAdmin">
                                            <input type="hidden" name="id" value="@item.ID" />
                                            <button type="submit" class="btn btn-primary">ReportAdmin</button>
                                        </form>
                                    </td>
                                    <td>
                                        <form method="post" asp-page-handler="BackMoney">
                                            <input type="hidden" name="id" value="@item.ID" />
                                            <button type="submit" class="btn btn-primary">ReportAdmin</button>
                                        </form>
                                        </td>
                                                                    
                                </tr>
                                stt++;
                            }
                        </tbody>
                    </table>
                    <!-- End Table with stripped rows -->
                </div>
            </div>
        </div>
    </div>
</section>
