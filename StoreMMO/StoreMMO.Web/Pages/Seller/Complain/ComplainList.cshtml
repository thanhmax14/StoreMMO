    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const confirmationModal = document.getElementById("confirmationModal");
            const confirmationForm = document.getElementById("confirmationForm");
            const modalHiddenId = document.getElementById("modalHiddenId");
            const modalHiddenAction = document.getElementById("modalHiddenAction");
            const modalTitle = document.getElementById("modalTitle");
            const modalBody = document.getElementById("modalBody");

            // Bắt sự kiện nhấn các nút xác nhận
            document.querySelectorAll(".confirm-btn").forEach(button => {
                button.addEventListener("click", function () {
                    // Lấy thông tin từ các thuộc tính `data` của nút
                    const action = button.getAttribute("data-action");
                    const itemId = button.getAttribute("data-id");
                    const title = button.getAttribute("data-title");
                    const message = button.getAttribute("data-message");

                    // Cập nhật form với thông tin động
                    confirmationForm.action = `?handler=${action}`; // Cập nhật đường dẫn cho form
                    modalHiddenId.value = itemId; // Cập nhật ID
                    modalHiddenAction.value = action; // Cập nhật action
                    modalTitle.innerText = title; // Cập nhật tiêu đề
                    modalBody.innerText = message; // Cập nhật thông điệp

                    // Hiển thị modal
                    new bootstrap.Modal(confirmationModal).show();
                });
            });
        });
    </script>


